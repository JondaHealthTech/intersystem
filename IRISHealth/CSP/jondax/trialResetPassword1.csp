<html>
<head>
	<script language="cache" runat="server">d HEADTRIAL^WSP999</script>
	<link rel="stylesheet" href="assets/styles/trialResetPassword1.css">
</head>
<body>
<form id="F1">
	<div id="wrapper">
	    <div class="bg-wrapper">
	        <div class="bg4">
	            <img src="./assets/images/bg4.png">
	        </div>
	    </div>
	    <div class="content">
	        <a href="https://www.jondax.eu/csp/jondax/trialLogin.csp"><img class="logo" src="./assets/images/trial/JXbyJx.png" alt="Jonda X"></a>
	        <div id="login-form" class="login-form">
				<img src="./assets/images/Exclamation.png" alt="Exclamation">
                <h3>Forgot your password?</h3>
                <h4>Enter your registered email address below to receive password reset instructions.</h4>
	            <div class="input-group">
	                <input type="email" name="T1" id="T1" placeholder="Enter your email" autocomplete="off" onkeypress="jChangeMe(event)">
	            </div>
	            <button type="button" class="req-btn" onclick="submitEmail()">Send verification code</button>
	            <p id="AlertText" class="error-text">
	                
	            </p>
	        </div>
	    </div>
	</div>
	<script type="text/javascript">var resizefunc = [];</script>
	<!-- jQuery  -->
	<script language="cache" runat="server">
		d jQueryCore^WSP999
	</script>
</form>
</body>
<script type="text/javascript">
	let T1=document.getElementById("T1");
	let AlertText=document.getElementById("AlertText");
	var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,12})+$/
	function jChangeMe(event){
		if(event.which === 13){
			event.preventDefault();
			submitEmail();
		}
		else{
			AlertText.innerHTML=""
		}
	}
	function submitEmail(){
		
		if(T1.value==""){
			AlertText.innerHTML="Please enter the mail";
			return false
		}
		else if (mailformat.test(T1.value)){
			#server(..cCheckUser(T1.value))#
			if (AlertText.innerHTML==""){
			#server(..cSendCode(T1.value))#
			window.open("trialResetPassword2.csp","_self")
			}
		}
		else{
			AlertText.innerHTML="Please enter a valid email address."
			return false
			
		}
	}
</script>
<script language="cache" method="cCheckUser" arguments="d1:%String">
	d CheckUser^trialResetPassword
</script>
<script language="cache" method="cSendCode" arguments="d1:%String">
	d ResetPassword^AutoMail
	s %session.Data("Email")=d1
</script>
</html>
