<html>
<head>
	<script language="cache" runat="server">d HEAD1^WSP999</script>
	<link rel="stylesheet" href="assets/styles/jxResetPassword3.css">
</head>
<body>
<form id="F1" autocomplete="off">
	<div id="wrapper">
	    <div class="bg-wrapper">
	        <div class="bg4">
	            <img src="./assets/images/bg4.png">
	        </div>
	    </div>
	    <div class="content">
	        <img class="logo" src="./assets/images/Jonda X Logo White Pink.png" alt="Jonda X">
	        <div id="reset-form" class="reset-form">
				<img class="reset-icon" src="./assets/images/password.png" alt="Password">
                <h3>Let's set up your 
					new password !</h3>
                <h4>We recommend not using
					a prior password</h4>
	            
					<div class="input-group">
						<input type="password" name="password" id="T1" placeholder="Enter your password" onfocus="removeError(event)"/>
						<img
							src="./assets/images/eyeClose.png"
							onclick="jTogglePassword(event)"
						/>
						<p class="error-text">Invalid password</p>
					</div>
					<div class="input-group">
						<input type="password" name="c-password" id="T2" placeholder="Confirm your password" onfocus="removeError(event)"/>
						<img
							src="./assets/images/eyeClose.png"
							onclick="jTogglePassword(event)"
						/>
						<p class="error-text">Password not match</p>
					</div>
					<div class="pass-req">
						<p>Your password should contain</p>
						<div class="req-groups">
							<div class="req-group">
								<h5>8+</h5>
								<p>Characters</p>
							</div>
							<div class="req-group">
								<h5>AA</h5>
								<p>Uppercase</p>
							</div>
							<div class="req-group">
								<h5>aa</h5>
								<p>Lowercase</p>
							</div>
							<div class="req-group">
								<h5>123</h5>
								<p>Number</p>
							</div>
							<div class="req-group">
								<h5>&$#</h5>
								<p>Symbol</p>
							</div>
						</div>
					</div>
					<button type="button" onclick="jValidateMe()" id="B1" name="B1" class="btn btn-block waves-effect waves-light">
						Change Password
					</button>
	        </div>
	    </div>
	</div>
	<script type="text/javascript">var resizefunc = [];</script>
	<!-- jQuery  -->
	<script language="cache" runat="server">
		d jQueryCore^WSP999
	</script>
</form>
</body>
<script type="text/javascript">
	T1=self.T1,T2=self.T2
	function jTogglePassword(e) {
		let input = e.target.closest(".input-group").querySelector("input");
		if (input.type == "password") {
			input.type = "text";
			e.target.src = "./assets/images/eyeOpen.png";
		} else {
			input.type = "password";
			e.target.src = "./assets/images/eyeClose.png";
		}
	}
	function jValidateMe(e) {
		let check = true;
		if (T1.value != T2.value){
			T2.nextElementSibling.nextElementSibling.classList.add("active");
			check = false;
		}
		if (!/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/.test(T1.value)){
			T1.nextElementSibling.nextElementSibling.classList.add("active");
			check = false;
		}
	}
</script>
</html>
