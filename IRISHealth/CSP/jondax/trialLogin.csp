<script type="text/javascript">
T1=self.F1.T1, T2=self.F1.T2
let popup1 = document.getElementById("popup1");
var T3

function jTogglePassword(event){
	if(T2.type=="password"){
		T2.type="text";
		event.target.src = "./assets/images/eyeOpen.png";
	}
	else{
		T2.type="password";
		event.target.src = "./assets/images/eyeClose.png";
	}
}

function jInitMe(){
	T1.focus()
}

function jCheckKey(event){
	jChangeMe();
	if(event.which === 13){
		event.preventDefault();
		jLogin()
	}
}

function jChangeMe(){
	document.getElementById("AlertText").style.opacity=0
}

function jLogin(){	
	if ((T1.value=="")||(T2.value=="")){
		document.getElementById("AlertText").style.opacity=1
		document.getElementById("AlertText").innerHTML="Please fill both fields"
		return false
	}
	#server(..cLogin(T1.value,T2.value))#
}
function jResetPassword(){
	window.open('trialResetPassword1.csp','_self')
}
function openPopup1(){
    setTimeout(()=>{
       popup1.classList.remove("inactive")
    },100);
}
function removePopup1(){
    popup1.classList.add("inactive");
}

function jContact(e){
	e.preventDefault();
    window.location.href="mailto:partnerships@jonda.health?subject=%5BJondaX%5D%20%20Request%20for%20Account%20Extension&body=I%20would%20like%20to%20extend%20the%20validity%20of%20my%20JondaX%20Trial%20profile."
	window.location.reload();  
}
</script>
