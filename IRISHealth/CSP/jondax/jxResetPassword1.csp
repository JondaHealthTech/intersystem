<html>
<head>
	<script language="cache" runat="server">d HEAD1^WSP999</script>
	<link rel="stylesheet" href="assets/styles/jxResetPassword1.css">
</head>
<body>
<form id="F1">
	<div id="wrapper">
	    <div class="bg-wrapper">
	        <div class="bg4">
	            <img src="./assets/images/bg4.png">
	        </div>
	    </div>
	    <div class="content">
	        <img class="logo" src="./assets/images/Jonda X Logo White Pink.png" alt="Jonda X">
	        <div id="login-form" class="login-form">
				<img src="./assets/images/Exclamation.png" alt="Exclamation">
                <h3>Forgot your password?</h3>
                <h4>Enter your registered email address below to receive password reset instructions.</h4>
	            <div class="input-group">
	                <input type="email" name="T1" id="T1" placeholder="Enter your email" autocomplete="off" onkeypress="jChangeMe()">
	            </div>
	            <button type="button" class="req-btn" onclick="submitEmail()">Done</button>
	            <p id="AlertText" class="error-text">
	                An error has been found in the email address. <br>
					Please check if it is written in the correct form.
	            </p>
	        </div>
	    </div>
	</div>
	<script type="text/javascript">var resizefunc = [];</script>
	<!-- jQuery  -->
	<script language="cache" runat="server">
		d jQueryCore^WSP999
	</script>
</form>
</body>
<script type="text/javascript">
	T1=self.T1
	
	function jChangeMe(){
		document.getElementById("AlertText").style.opacity=0
	}
	function submitEmail(){
		if (!/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,6})+$/.test(T1.value)){
			document.getElementById("AlertText").style.opacity=1
			return false
		}
		else{
			window.open("jxResetPassword2.csp","_self")
		}
	}
</script>
</html>
