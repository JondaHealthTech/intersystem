<!--Studio Template -->
<csp:StudioInteractiveTemplate name="HTML Input" type="CSP,CLS"  description="Inserts an HTML INPUT tag." id="HTMLInput">
<csp:class DOMAIN="%TemplateMessages">
<html>
<head>
<style type="text/css">
<!--
-->
</style>
</head>
<body>
<script language="cache" runat="server">
	Do ##class(%template.htmlcolor).DrawTitle($$$Text("HTML Input Control Wizard"))
</script>
<!-- YSD2449<h1>#($$$Text("HTML Input Control Wizard"))#</h1>-->
<div class="Description">#($$$Text("Select the type of INPUT control to insert and then press OK."))#</div>
<hr>
<form name="form" action="HTMLInput2.csp">
<table cellspacing="5" cellpadding="0">
<tr><td class="Label">type:</td><td>
<select name="type">
<option value="button">button
<option value="checkbox">checkbox
<option value="file">file
<option value="hidden">hidden
<option value="image">image
<option value="password">password
<option value="radio">radio
<option value="reset">reset
<option value="submit">submit
<option value="text" selected>text
</select>
</td></tr>
<tr><td class="Label">name:</td><td><input type="text" name="name" size="25" value="#($get(%request.Data("SelectedText",1),$$$Text("INPUT")))#"></td></tr>
<tr><td class="Label">size:</td><td><input type="text" size="5" name="size" value=""></td></tr>
<tr><td class="Label">value:</td><td><input type="text" size="25" name="value" value=""></td></tr>
</table>
<hr>
<div align="right"><input type="submit" value=" OK " name="submit" textid=""></div>
</form>
</body>
</html>
